@model EquipmentRentalService.Models.RentalEquipment;


<form asp-action="EditEquipment">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <input asp-for="IsAvailable" class="form-control" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OverdueRate" class="control-label"></label>
        <input type="text" asp-for="OverdueRate" class="form-control" />
        <span asp-validation-for="OverdueRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BaseRentPrice" class="control-label"></label>
        <input type="text" asp-for="BaseRentPrice" class="form-control" />
        <span asp-validation-for="BaseRentPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DailyRentPrice" class="control-label"></label>
        <input type="text" asp-for="DailyRentPrice" class="form-control" />
        <span asp-validation-for="DailyRentPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" />
    </div>
</form>